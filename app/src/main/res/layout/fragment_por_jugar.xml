<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.fragments.Capitan.partidos_fragments.FragmentPorJugar">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="@color/app_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_equipo_porjugar"
            android:text="resultado"
            android:textSize="@dimen/text_size_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>



        <TextView
            android:id="@+id/tv_reputacion_porjugar"
            android:text="Reputacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_equipo_porjugar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textSize="@dimen/text_size_action_bar"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_partidosPorjugar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
