<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.appaloossa.honorgame.View.activity.Capitan.EquipoArmadoActivity"
    tools:showIn="@layout/activity_equipo_armado">
    <TextView
        android:id="@+id/title_nombreEquipo"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Del Equipo"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/tv_nombre_equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:text="los locos de boedo"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="330dp"
        android:background="@color/light_gray"
        android:layout_gravity="center_horizontal"
        android:layout_height="1dp">

    </View>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/recyclerView_jugadoresEquipo"
        android:layout_width="match_parent"
        android:layout_height="360dp">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/bttn_agregarJugadores"
        android:text="Agregar mas jugadores"
        android:layout_width="300dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue"
        android:textColor="@color/lighter_gray"
        android:textSize="@dimen/text_size_default"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_height="1dp">

    </View>
    <Button
        android:id="@+id/bttn_desafiarEquipos"
        android:text="Â¡Empieza a desafiar equipos!"
        android:layout_width="300dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue"
        android:textColor="@color/lighter_gray"
        android:textSize="@dimen/text_size_default"/>

</LinearLayout>
