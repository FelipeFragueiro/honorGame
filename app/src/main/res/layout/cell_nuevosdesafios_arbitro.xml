<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/container_item"
    android:background="@color/white">
    <TextView
        android:id="@+id/idEquipo1_secret"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp" />
    <TextView
        android:id="@+id/idEquipo2_secret"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp" />

    <TextView
        android:id="@+id/tv_numero_nuevoDesafio_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_ubicacion_nuevoDesafio_cell"
        android:layout_alignBottom="@+id/tv_ubicacion_nuevoDesafio_cell"
        android:layout_alignStart="@+id/tv_nombreEquipo1_nuevoDesafio_cell"
        android:text="Desafio 20"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_ubicacion_nuevoDesafio_cell"
        android:text="Ubicacion"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/tv_ubicacion_nuevoDesafio_cell"
        android:src="@drawable/ic_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_nombreEquipo1_nuevoDesafio_cell"
        android:text="revolution team"
        android:layout_below="@+id/tv_numero_nuevoDesafio_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:progressTint="@color/yellow"
        android:id="@+id/ratingbarEquipo1_nuevoDesafio_cell"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_below="@+id/tv_nombreEquipo1_nuevoDesafio_cell"/>

    <RelativeLayout
        android:id="@+id/circle_vs_nuevoDesafio_cell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_vs_arbitro"
        android:layout_alignBaseline="@+id/tv_nombreEquipo1_nuevoDesafio_cell"
        android:layout_marginLeft="175dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VS"
            android:textColor="#fff" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_nombreEquipo2_nuevoDesafio_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/ratingbarEquipo2_nuevoDesafio_cell"
        android:layout_alignEnd="@+id/tv_ubicacion_nuevoDesafio_cell"
        android:text="revolution team" />

    <RatingBar
        android:id="@+id/ratingbarEquipo2_nuevoDesafio_cell"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/tv_nombreEquipo2_nuevoDesafio_cell"
        android:numStars="5"
        android:progressTint="@color/yellow" />

    <ImageView
        android:id="@+id/ic_calendar_nuevoDesafio_cell"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbarEquipo1_nuevoDesafio_cell"/>
    <TextView
        android:layout_marginTop="27dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/07/2018 - 12:00 HS - 16:00 HS"
        android:layout_toRightOf="@+id/ic_calendar_nuevoDesafio_cell"
        android:layout_below="@+id/ratingbarEquipo1_nuevoDesafio_cell"
        android:id="@+id/textView3" />

    <Button
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/bttn_tomarDesafio_nuevoDesafio_cell"
        android:text="tomar desafÃ­o"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbarEquipo2_nuevoDesafio_cell"
        android:layout_alignParentRight="true"
        android:textColor="@color/lighter_gray"
        android:background="@drawable/btn_blue"
        android:textAllCaps="false"
        android:layout_marginBottom="25dp"
        />







</RelativeLayout>