            <TextView
                android:id="@+id/tv_numeroDeGoles_equipo1_crearResumen_arbitro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="#ffff" />

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_numeroDeGoles_equipo2_crearResumen_arbitro_relative"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginBottom="20dp"
                android:layout_alignBaseline="@+id/bttn_añadirNumeroGol_Equipo2_crearResumen"
                android:layout_alignBottom="@+id/bttn_añadirNumeroGol_Equipo2_crearResumen"
