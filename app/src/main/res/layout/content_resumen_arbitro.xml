                android:layout_alignBaseline="@+id/bttn_añadirNumeroAmonestacionRoja_Equipo1_crearResumen"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="+"

                />

            <Button
                android:id="@+id/bttn_restarNumeroAmonestacionAmarilla_Equipo1_crearResumen"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bttn_añadirNumeroAmonestacionAmarilla_Equipo1_crearResumen"
                android:layout_toLeftOf="@+id/bttn_añadirNumeroAmonestacionAmarilla_Equipo1_crearResumen"
                android:text="-" />


            <TextView
                android:id="@+id/title_nombreYapellido_equipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bttn_añadirNumeroAmonestacionRoja_Equipo1_crearResumen"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="nombre y apellido" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_amonestacionesEquipo1_crearResumen_arbitro"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/title_nombreYapellido_equipo1"
                android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_nombreDeEquipo2_amonestaciones_crearResumen_arbitro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="locos de los andes" />

            <TextView
                android:id="@+id/tv_numeroDeAmonestaciones_equipo2_Rojas_crearResumen"
