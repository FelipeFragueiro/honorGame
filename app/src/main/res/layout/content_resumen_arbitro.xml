                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_nombreDeEquipo1_amonestaciones_crearResumen_arbitro"
                android:layout_below="@+id/tv_nombreDeEquipo1_amonestaciones_crearResumen_arbitro"
                android:layout_marginTop="15dp"
                android:text="+" />

            <Button
                android:id="@+id/bttn_restarNumeroAmonestacionRoja_Equipo1_crearResumen"
                android:layout_width="50dp"
