                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_goleadores_crearResumen_arbitro"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/title_evaluacionDeEquipos_crearResumen_arbitro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Evaluación de equipos" />

