                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_nombreDeEquipo1_crearResumen_arbitro"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_numeroDeGoles_equipo1_crearResumen_arbitro_relative"
                android:text="+" />

            <Button
                android:id="@+id/bttn_restarNumeroGol_Equipo1_crearResumen"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_nombreDeEquipo1_crearResumen_arbitro"
                android:layout_toLeftOf="@+id/bttn_añadirNumeroGol_Equipo1_crearResumen"
                android:text="-" />

            <Button
                android:id="@+id/bttn_añadirNumeroGol_Equipo2_crearResumen"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bttn_añadirNumeroGol_Equipo1_crearResumen"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_numeroDeGoles_equipo2_crearResumen_arbitro_relative"
                android:text="+" />

            <Button
                android:id="@+id/bttn_restarNumeroGol_Equipo2_crearResumen"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bttn_añadirNumeroGol_Equipo2_crearResumen"
                android:layout_toLeftOf="@+id/bttn_añadirNumeroGol_Equipo2_crearResumen"
                android:text="-" />
        </RelativeLayout>

        <RelativeLayout
