                android:layout_alignBaseline="@+id/bttn_añadirNumeroAmonestacionRoja_Equipo2_crearResumen"
                android:layout_toLeftOf="@+id/tv_numeroDeAmonestaciones_equipo2_Amarillas_crearResumen"
