                android:layout_height="wrap_content"
                android:layout_below="@+id/title_amonestaciones"
                android:layout_marginLeft="20dp"
                android:text="locos de los andes" />

            <TextView
                android:id="@+id/tv_numeroDeAmonestaciones_Rojas_crearResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bttn_añadirNumeroAmonestacionRoja_Equipo1_crearResumen"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bttn_añadirNumeroAmonestacionRoja_Equipo1_crearResumen"
                android:text="0"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_numeroDeAmonestaciones_Amarillas_crearResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bttn_añadirNumeroAmonestacionAmarilla_Equipo1_crearResumen"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
