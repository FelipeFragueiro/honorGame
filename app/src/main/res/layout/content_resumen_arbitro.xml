                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Amonestaciones" />

            <TextView
                android:id="@+id/tv_nombreDeEquipo1_amonestaciones_crearResumen_arbitro"
