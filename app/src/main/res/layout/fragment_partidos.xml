<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.fragments.Capitan.partidos_fragments.FragmentJugados">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="@color/app_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_resultado"
            android:text="resultado"
            android:textSize="@dimen/text_size_action_bar"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_equipo"
            android:text="equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_action_bar"

            />
        <TextView
            android:id="@+id/tv_nota"
            android:layout_marginRight="45dp"
            android:text="nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_equipo"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_action_bar"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recyclerView_partidos_jugados"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
