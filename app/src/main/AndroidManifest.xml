<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appaloossa.honorgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Transparent">
        <activity android:name=".View.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
        </activity>
        <activity
            android:name=".View.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".View.activity.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".View.activity.Capitan.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.activity.Capitan.PartidosActivity"
            android:label="@string/title_activity_partidos"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".View.activity.Capitan.EquipoActivity"
            android:label="@string/title_activity_equipo"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".View.activity.Capitan.EquipoArmadoActivity"
            android:label="@string/title_activity_equipo_armado"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".View.activity.Capitan.RankingActivity"
            android:label="@string/title_activity_ranking"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".View.activity.Arbitro.ArbitroMainActivity" />
        <activity android:name=".View.activity.Arbitro.PartidosArbitroActivity" />
        <activity
            android:name=".View.activity.Arbitro.ResumenArbitroActivity"
            android:label="@string/title_activity_resumen_arbitro"
            android:theme="@style/Theme.Transparent"></activity>
    </application>

</manifest>